---
import pages from '../lib/pages';
export interface Props {
	pageKey: string;
}

const { pageKey } = Astro.props;
const page = pages[pageKey as keyof typeof pages];
---

<nav>
	{page.prev ? <a href={page.prev === 'intro' ? '/' : `/${page.prev}`}>←</a> : <div/>}
	{page.next ? <a href={`/${page.next}`}>→</a> : <div/>}
</nav>
<style>
	nav {
		display: flex;
		justify-content: space-between;
		font-size: 2em;
	}

	nav a {
		user-select: none;
	}
</style>
